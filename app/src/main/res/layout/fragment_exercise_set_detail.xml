<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	tools:context=".exerciseSetDetail.ExerciseSetDetailsFragment">
	
	<data>
		
		<variable
			name="model"
			type="com.piotr.practicepad.exerciseSetDetail.ExerciseSetDetailViewModel" />
	</data>
	
	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/grey_top">
		
		<TextView
			android:id="@+id/name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/medium_margin"
			android:layout_marginTop="@dimen/medium_margin"
			android:text="@{model.state.name}"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			tools:text="Name of the exercise set" />
		
		<TextView
			android:id="@+id/tempo"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/medium_margin"
			android:layout_marginTop="@dimen/medium_margin"
			android:text="@{model.state.tempo}"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/name"
			tools:text="Tempo" />
		
		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/list"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/medium_margin"
			app:items="@{model.state.exerciseDetailsList}"
			app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/tempo"
			tools:context=".exerciseSetDetail.ExerciseSetDetailsFragment"
			tools:listitem="@layout/exercise_detail_card" />
	</androidx.constraintlayout.widget.ConstraintLayout>
	
</layout>
