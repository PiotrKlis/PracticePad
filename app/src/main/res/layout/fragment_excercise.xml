<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">
	
	<data>
		
		<import type="com.piotr.practicepad.utils.Converter" />
		
		<variable
			name="viewmodel"
			type="com.piotr.practicepad.Exercise.ExerciseViewModel" />
	</data>
	
	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		
		<TextView
			android:id="@+id/exercise_set_name"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:gravity="center_horizontal"
			android:textSize="32sp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			tools:text="@{viewmodel.exerciseSetState.exerciseSetName}" />
		
		<TextView
			android:id="@+id/overall_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:text="@{Converter.convertIntoMinutesAndSeconds(viewmodel.exerciseSetState.timeLeft)}"
			android:textSize="24sp"
			app:layout_constraintEnd_toStartOf="@+id/next_exercise"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/exercise_set_name"
			tools:text="30:00" />
		
		<TextView
			android:id="@+id/exercises_done"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:gravity="center"
			app:exercisesDone="{@viewmodel.exerciseSetState.currentExerciseIndex}"
			app:exerciseSetListSize="{}"
			android:textSize="24sp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintStart_toEndOf="@+id/next_exercise"
			app:layout_constraintTop_toBottomOf="@id/exercise_set_name"
			tools:text="3/15" />
		
		<TextView
			android:id="@+id/next_exercise"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:gravity="center"
			android:text="@{`Next: ` + viewmodel.nextExerciseName}"
			android:textSize="24sp"
			app:layout_constraintEnd_toStartOf="@+id/exercises_done"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintStart_toEndOf="@+id/overall_time"
			app:layout_constraintTop_toBottomOf="@id/exercise_set_name"
			tools:text="Next: Double stroke roll" />
		
		<View
			android:id="@+id/view"
			android:layout_width="0dp"
			android:layout_height="1dp"
			android:layout_marginTop="16dp"
			android:background="@color/colorPrimaryDark"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/next_exercise" />
		
		<TextView
			android:id="@+id/current_exercise_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:gravity="center"
			android:text="@{viewmodel.currentExerciseName}"
			android:textSize="48sp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="@id/view"
			tools:text="Exercise Name" />
		
		<TextView
			android:id="@+id/current_exercise_time_left"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:gravity="center"
			android:text="@{Converter.convertIntoMinutesAndSeconds(viewmodel.currentExerciseTimeLeft)}"
			android:textSize="32sp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/current_exercise_name"
			tools:text="5:00" />
		
		<ImageView
			android:id="@+id/image"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginTop="8dp"
			android:layout_marginBottom="16dp"
			android:background="@{viewmodel.currentExerciseImage}"
			app:layout_constraintBottom_toTopOf="@id/power"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/current_exercise_time_left"
			tools:background="@drawable/single_stroke_roll" />
		
		<ImageButton
			android:id="@+id/power"
			android:layout_width="80dp"
			android:layout_height="60dp"
			android:layout_marginBottom="16dp"
			android:background="@{viewmodel.isTimerOn}"
			android:onClick="@{() -> viewmodel.powerClick()}"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent" />
	
	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>