<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">
	
	<data>
		
		<variable
			name="viewmodel"
			type="com.piotr.practicepad.exercise.ExerciseViewModel" />
	</data>
	
	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/grey_top"
		android:orientation="vertical">
		
		<TextView
			android:id="@+id/exercise_set_name"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:gravity="center_horizontal"
			android:text="@{viewmodel.state.setName}"
			android:textSize="24sp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			tools:text="Exercise Set Name" />
		
		<TextView
			android:id="@+id/overall_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:textSize="18sp"
			app:layout_constraintEnd_toStartOf="@+id/next_exercise"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/exercise_set_name"
			app:timeLeft="@{viewmodel.state.setTimeLeft}"
			tools:text="30:00" />
		
		<TextView
			android:id="@+id/exercises_done"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:gravity="center"
			android:textSize="18sp"
			app:exercisesLeft="@{viewmodel.state.exercisesLeft}"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@+id/next_exercise"
			app:layout_constraintTop_toBottomOf="@id/exercise_set_name"
			tools:text="3/15" />
		
		<TextView
			android:id="@+id/next_exercise"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:gravity="center"
			android:text="@{`Next: ` + viewmodel.state.nextExerciseName}"
			android:textSize="18sp"
			app:layout_constraintEnd_toStartOf="@+id/exercises_done"
			app:layout_constraintStart_toEndOf="@+id/overall_time"
			app:layout_constraintTop_toBottomOf="@id/exercise_set_name"
			tools:text="Next: Double stroke roll" />
		
		<View
			android:id="@+id/view"
			android:layout_width="0dp"
			android:layout_height="1dp"
			android:layout_marginTop="16dp"
			android:background="@color/white"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/next_exercise" />
		
		<TextView
			android:id="@+id/current_exercise_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:gravity="center"
			android:text="@{viewmodel.state.exerciseName}"
			android:textSize="32sp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="@id/view"
			tools:text="Exercise Name" />
		
		<TextView
			android:id="@+id/current_exercise_time_left"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:gravity="center"
			android:textSize="32sp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/current_exercise_name"
			app:timeLeft="@{viewmodel.state.exerciseTimeLeft}"
			tools:text="5:00" />
		
		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/image"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:adjustViewBounds="true"
			android:background="@color/white"
			app:layout_constraintVertical_bias="0.25"
			app:imageResource="@{viewmodel.state.exerciseImage}"
			android:layout_marginTop="32dp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/current_exercise_time_left"
			app:layout_constraintBottom_toTopOf="@id/power"
			tools:src="@drawable/single_stroke_roll" />
		
		<ImageButton
			android:id="@+id/power"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:layout_marginBottom="16dp"
			android:onClick="@{() -> viewmodel.powerClick()}"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:setImageButton="@{viewmodel.isTimerOn}"
			tools:src="@drawable/ic_play_circle_filled_black_24dp" />
	
	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>